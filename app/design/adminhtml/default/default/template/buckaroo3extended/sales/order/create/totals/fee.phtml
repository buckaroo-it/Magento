            <?php echo $this->escapeHtml($this->getTotal()->getTitle()); ?>
            <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                </strong>
            <?php endif; ?>
        </td>
        <td style="<?php echo $this->getTotal()->getStyle() ?>" class="a-right">
            <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                <strong>
            <?php endif; ?>
            <?php echo $this->helper('checkout')->formatPrice($value) ?>
                <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                </strong>
                <?php endif; ?>
        </td>
    </tr>
<?php endif; ?>
